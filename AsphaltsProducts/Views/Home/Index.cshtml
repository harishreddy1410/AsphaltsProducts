@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner1.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-success" href="/about/me">
                        want to know more about developer?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-success" href="/about/me">
                        want to know more about developer?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner3.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-success" href="/about/me">
                        want to know more about developer?
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/banner4.png" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    <a class="btn btn-success" href="/about/me">
                        want to know more about developer?
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div id="products">

</div>
<div id="itemTemplate" class="invisible">
    <div class="item-container">
        <div class="panel panel-default">
            <div class="panel-heading font-bold" title="##PRODUCTNAME##">##PRODUCTNAME##</div>
            <div class="panel-body no-padding">                
                <div id="##CAROUSELNAME##" class="carousel" data-ride="carousel">
                    <ol class="carousel-indicators">
                        ##INDICATORS##
                    </ol>
                    <div class="carousel-inner">
                        ##CAROUSELIMAGES##
                    </div>
                    <a class="left carousel-control" href="###CAROUSELNAME##" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Prev</span>
                    </a>
                    <a class="carousel-control right">
                        <span class="glyphicon glyphicon-chevron-right" href="###CAROUSELNAME##" data-slide="next">

                        </span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="panel-info">
                <div class="rating-container" title="Product ratings">
                    <b>##PRODUCTRATING##</b> <sup><span class="glyphicon glyphicon-star"></span></sup>
                </div>
                <span class="float-right text-right">
                    <span>Offer price </span>:<del>##ACTUALPRICE##</del>  <b>##OFFERPRICE##</b>
                </span>
            </div>
            <div class="panel-footer text-center table-responsive">
                
                <div class="row">
                    <div class="col-lg-4 no-padding" onclick="AddToCart('##CAROUSELNAME##'); return false;">
                        <span class="add-to-cart">
                            <span class="glyphicon glyphicon-heart"></span> add to cart
                        </span>
                    </div>
                    <div class="col-lg-4 no-padding">
                        <span class="" onclick="$('div.test').modal('show')">
                            <span class="glyphicon glyphicon-modal-window"></span>
                            Details
                        </span>
                    </div>
                    <div class="col-lg-4 no-padding">
                        <span class="text-left float-right">
                            buy now <span class="glyphicon glyphicon-shopping-cart"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div role="dialog" class="test modal" style="display:none;">
    <div class="modal-dialog">
        <div class="modal-content center-block">
            Test<a class="btn btn-success">Know more</a>
        </div>
    </div>
</div>

